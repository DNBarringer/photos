{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "jsx": "preserve",
      "lib": ["dom", "esnext"],
      "types": ["vite/client", "@types/node"],
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules", "dist"]
  }
  